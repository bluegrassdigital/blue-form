{
  "name": "blue-form",
  "version": "1.2.0",
  "description": "A class based form implementation for easily getting/setting form field values programmatically",
  "files": [
    "dist"
  ],
  "main": "dist/blue-form.js",
  "umd:main": "dist/blue-form.umd.js",
  "module": "dist/blue-form.mjs",
  "source": "modules/index.js",
  "scripts": {
    "build": "microbundle --name 'blueForm' --globals blue-js=blue",
    "dev": "microbundle watch",
    "prepublishOnly": "npm run build"
  },
  "author": {
    "name": "Simon Buerger",
    "url": "https://twitter.com/simonbuerger"
  },
  "license": "MIT",
  "issues": "http://github.com/bluegrassdigital/blue-form/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluegrassdigital/blue-form.git"
  },
  "keywords": [
    "form",
    "blue-widgets"
  ],
  "peerDependencies": {
    "blue-js": ">= 3.0.2"
  },
  "devDependencies": {
    "microbundle": "^0.10.0"
  }
}
